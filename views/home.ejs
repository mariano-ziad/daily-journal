<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p><%= homeStartingContent %></p>

    <% posts.forEach(function(post){ %>
        <h1>
            <%= post.header %>
        </h1>
        <% if (post.subject) { %>
            <p>
                <%= post.subject.substring(0, 200) + "..." %> <a href="/posts/<%= post.header %>">Read More</a>
            </p>
        <% } else { %>
                <p> This post has no content.</p>
        <% } %>
    <% }); %>

<%- include("partials/footer"); -%>