<%- include("partials/header"); -%>

    <h1>Compose</h1>

    <form action="/compose" method="post" class="mb-3">
        
        <div class="form-group">
            
            <label for="newComposeTitle">Title</label>
            
            <input class="form-control" type="text" name="newComposeTitle" required autofocus autocomplete="off" placeholder="Enter Your Post Title">
        
        </div>
        
        <div class="form-group">
            
            <label for="newComposePost">Post</label>
            
            <textarea class="form-control" name="newComposeContent" rows="5" placeholder="Write your Post"></textarea>
        
        </div>
        
        <button type="submit" class="btn btn-primary btn-lg">Publish</button>
    
    </form>

<%- include("partials/footer"); -%>